<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id = "@+id/relativeLayout1"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background="#A921C0"
        >

        <TextView
            android:id = "@+id/days"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "ימים"
            android:fontFamily="@font/gveretlevinalefalefalef"
            android:textSize="16dp"
            android:textColor = "#ffffff" />


        <TextView
            android:id = "@+id/start_hour"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:layout_marginRight="10dp"
            android:padding = "5dp"
            android:textSize="16dp"
            android:text = "שעת סיום"
            android:fontFamily="@font/gveretlevinalefalefalef"
            android:textColor = "#ffffff" />

        <TextView
            android:id = "@+id/finish_date"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity="center"
            android:padding = "5dp"
            android:textSize="16dp"
            android:text = "שעת התחלה"
            android:fontFamily="@font/gveretlevinalefalefalef"
            android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/edit_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="40dp">


        <EditText
            android:id="@+id/edit_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1.5"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />



        <EditText
            android:id="@+id/edit_finish_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1.8"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />


        <EditText
            android:id="@+id/edit_start_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "2"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />


    </LinearLayout>



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_hours"
        android:background="@drawable/rounded_edit_txt"
        android:text="שמור"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>



</RelativeLayout>