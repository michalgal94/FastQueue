<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTimeBusiness">


    <LinearLayout
        android:id = "@+id/relativeLayout1"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id = "@+id/days"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "ימים"
            android:textSize="16dp"
            android:textColor = "#ffffff" />

        <TextView
            android:id = "@+id/finish_hour"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "עד שעה"
            android:textSize="16dp"
            android:textColor = "#ffffff"/>

        <TextView
            android:id = "@+id/start_hour"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:textSize="16dp"
            android:text = "משעה"
            android:textColor = "#ffffff" />

        <TextView
            android:id = "@+id/finish_date"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:textSize="16dp"
            android:text = "סיום"
            android:textColor="#ffffff"/>

        <TextView
            android:id = "@+id/start_date"
            android:layout_width = "10dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:textSize="16dp"
            android:text = "התחלה"
            android:textColor="#ffffff"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/edit_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="40dp">


        <EditText
            android:id="@+id/edit_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />

        <EditText
            android:id="@+id/edit_till_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />

        <EditText
            android:id="@+id/edit_from_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />

        <EditText
            android:id="@+id/edit_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />

        <EditText
            android:id="@+id/edit_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            />


    </LinearLayout>



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_hours"
        android:layout_centerInParent="true"
        android:text="שמור">


    </Button>

<!--    <ListView-->
<!--        android:id="@+id/listview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:divider="@null" />-->


</RelativeLayout>