<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clients">


    <ImageView
        android:id="@+id/clients_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clien"
        android:layout_marginStart="30dp"/>


    <EditText
        android:id="@+id/search_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="חפש איש קשר"
        android:textSize="16dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="60dp">

    </EditText>

    <Button
        android:id="@+id/find_search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clients_title"
        android:layout_toLeftOf="@+id/search_bar"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginStart="40dp"
        android:text="חפש">

    </Button>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_new"
        android:layout_below="@+id/search_bar"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_erase"
        android:layout_below="@+id/search_bar"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/clients_list"
        android:divider="?android:dividerHorizontal"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"

        />





</RelativeLayout>