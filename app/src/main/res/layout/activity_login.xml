<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/main_IMG_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_applogo"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/main_IMG_logo"
        >

        <TextView
            android:id="@+id/main_LBL_login"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="כניסה"
            android:textSize="35sp"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/main_LBL_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/main_BTN_login"
            android:layout_toRightOf="@id/main_BTN_create"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="עדיין אין לך חשבון"
            android:textSize="14sp" />

        <Button
            android:id="@+id/main_BTN_create"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_TXT_pass"
            android:layout_centerVertical="true"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="60dp"
            android:text=" !צור חשבון חדש" />



        <EditText
            android:id="@+id/edit_TXT_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_LBL_login"
            android:elevation="5dp"
            android:background="@drawable/rounded_edit_txt"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-70dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="number"
            android:hint="טלפון" />


        <!--        <EditText-->
<!--            android:id="@+id/edit_TXT_username"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/main_LBL_login"-->
<!--            android:elevation="5dp"-->
<!--            android:background="@drawable/rounded_edit_txt"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_marginBottom="-70dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:ems="10"-->
<!--            android:inputType="textPersonName"-->
<!--            android:hint="שם משתמש" />-->


        <EditText
            android:id="@+id/edit_TXT_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_TXT_phone"
            android:elevation="5dp"
            android:background="@drawable/rounded_edit_txt"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:hint="סיסמה"
            android:gravity="end"/>

        <Button
            android:id="@+id/main_BTN_login"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_TXT_pass"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="80dp"
            android:text="היכנס" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@+id/edit_TXT_pass"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="95dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="זכור אותי"
            android:layout_below="@+id/edit_TXT_pass"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>

</RelativeLayout>