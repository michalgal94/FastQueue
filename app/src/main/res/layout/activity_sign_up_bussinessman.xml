<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpBusiness">



    <TextView
        android:id="@+id/main_LBL_sign"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="הרשמה"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:textColor="#A921C0"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/edit_TXT_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_LBL_sign"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="שם משתמש" />

    <EditText
        android:id="@+id/edit_TXT_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_TXT_username"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="אימייל" />



    <EditText
        android:id="@+id/edit_TXT_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_TXT_email"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="סיסמה"
        android:gravity="end"/>

    <EditText
        android:id="@+id/edit_TXT_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_TXT_pass"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="אימות סיסמה"
        android:gravity="end"/>


    <EditText
        android:id="@+id/edit_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_TXT_verify"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="טלפון" />


    <EditText
        android:id="@+id/edit_TXT_businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phoneNumber"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="שם העסק" />


    <EditText
        android:id="@+id/edit_TXT_businessAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_TXT_businessName"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="כתובת העסק" />




    <Button
        android:id="@+id/main_BTN_sign"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_TXT_businessAddress"
        android:background="@drawable/rounded_edit_txt"
        android:text="הירשם"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>


</RelativeLayout>