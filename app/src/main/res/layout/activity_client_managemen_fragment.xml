<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientManagemenFragment">

    <TextView
        android:id="@+id/management_title"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="ניהול לקוחות"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/choco"
        android:textColor="#A921C0"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/limit_double_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הגבלת תור כפול"
        android:textSize="18dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/management_title"/>


    <Switch
        android:id="@+id/Switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/limit_double_queue"
        android:layout_marginRight="150dp"
        android:theme="@style/SwitchTheme"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/management_title"
        android:checked="true"
        android:textOff="Off"
        android:textOn="On"/>


    <TextView
        android:id="@+id/joined_queues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עדיפות לתורים צמודים"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_below="@id/limit_double_queue"/>

    <Switch
        android:id="@+id/Switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/limit_double_queue"
        android:theme="@style/SwitchTheme"
        android:layout_marginTop="40dp"
        android:layout_marginRight="114dp"
        android:layout_toLeftOf="@+id/joined_queues"
        android:checked="true" />



    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/joined_queues"
        android:background="@drawable/rounded_edit_txt"
        android:text="עדכן"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>


</RelativeLayout>