<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_import_title"/>


    <TextView
        android:id="@+id/click_to_add_TXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:text="סמן אנשי קשר שברצונך להוסיף כלקוחות"
        android:textColor="#9C27B0"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_to_clients_list_BTN"
        android:layout_below="@+id/click_to_add_TXT"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:id="@+id/add_to_clients_list_BTN"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="הוסף"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>



</RelativeLayout>