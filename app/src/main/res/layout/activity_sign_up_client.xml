<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpClient"
    android:background="@color/gray">


    <TextView
        android:id="@+id/main_LBL_sign"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="הרשמה"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:textColor="#A921C0"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/edit_TXT_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_LBL_sign"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="שם משתמש"/>

    <EditText
        android:id="@+id/edit_TXT_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:layout_below="@id/edit_TXT_username"
        android:background="@drawable/rounded_edit_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="אימייל" />



    <EditText
        android:id="@+id/edit_TXT_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_TXT_email"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="סיסמה"
        android:gravity="end"/>

    <EditText
    android:id="@+id/edit_TXT_verify"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/edit_TXT_pass"
    android:layout_centerInParent="true"
    android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
    android:background="@drawable/rounded_edit_txt"
        android:ems="10"
    android:inputType="numberPassword"
    android:hint="אימות סיסמה"
    android:gravity="end"/>

    <EditText
        android:id="@+id/edit_TXT_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_TXT_verify"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:ems="10"
        android:inputType="phone"
        android:hint="טלפון"
        android:textDirection="rtl"
        android:gravity="end"/>


    <Button
        android:id="@+id/main_BTN_sign"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_TXT_pass"
        android:background="@drawable/rounded_edit_txt"
        android:text="הירשם"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>




</RelativeLayout>