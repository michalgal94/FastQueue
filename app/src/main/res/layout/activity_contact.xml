<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityContact">


    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginTop="20dp"
        android:text="הזן את פרטיך ואנחנו
                          נחזור אליך בהקדם!"
        android:textSize="25dp"/>



    <EditText
        android:id="@+id/edit_TXT_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
       android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="שם" />



    <EditText
        android:id="@+id/edit_TXT_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_TXT_name"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="טלפון"/>


    <Button
        android:id="@+id/main_BTN_send"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edit_TXT_number"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp"
        android:text="שלח"
        />

    <ImageView
        android:id="@+id/whatsapp_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_BTN_send"
        android:src="@drawable/ic_whatsapp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="או עבור לתמיכה בוואטסאפ"
        android:layout_toLeftOf="@+id/whatsapp_support"
        android:layout_below="@+id/main_BTN_send"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"/>



</RelativeLayout>