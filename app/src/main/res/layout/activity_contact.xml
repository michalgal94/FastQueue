<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityContact">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="הזן את פרטיך ואנחנו
                          נחזור אליך בהקדם !"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:textColor="#A921C0"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/edit_TXT_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="שם" />



    <EditText
        android:id="@+id/edit_TXT_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_TXT_name"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="-70dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="טלפון"/>




    <Button
        android:id="@+id/main_BTN_send"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_TXT_number"
        android:background="@drawable/rounded_edit_txt"
        android:text="שלח"
        android:fontFamily="@font/gveretlevinalefalefalef"
        android:backgroundTint="#F9E3FD"
        android:textColor="#9C27B0"
        android:textSize="16sp"
        android:textStyle="bold"/>




</RelativeLayout>